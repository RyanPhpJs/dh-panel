// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(uuid()) // ID PARA IDENTIFICAÇÃO INTERNA
  name String // Nome do usúario
  email String // Email do usuario
  username String // username do usuario
  password String // senha encriptada do usuario
  two_factor_secret String? // Se
  is_admin Boolean @default(false)
  tokens AuthToken[]
}

model Bots {
  id String @id @default(uuid()) // Id do bot
  started Boolean @default(false)
  package_id Int
  bot_token String // Token do bot (ENCRIPTADO)
  database_url String? // URL de conexão com o banco de dados (ENCRIPTADO)
  node_version String
  env String? // Variaveis ENV (JSON ENCRIPTADO)
  domains String[]
  http_port Int?
  uid String
  gid String
  ftp_username String?
  ftp_password String? // hashed

  package Packages @relation(fields: [package_id], references: [id])
}

model Packages {
  id Int @id @default(autoincrement())
  is_started Boolean @default(false)
  ram_limit Int // 0 unlimited
  cpu_limit Float // 0 unlimited
  storage_limit Int // limit of storage in mb 0 unlimited

  bots Bots[]
}

model AuthToken {
  id String @id @default(uuid())
  user_id String
  expiration DateTime
  token String
  user User @relation(fields: [user_id], references: [id])
}